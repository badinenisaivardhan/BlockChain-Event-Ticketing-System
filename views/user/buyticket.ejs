    const PurchaseTicket = async(eventId, eventTicketQuantity,totalPrice) => {
    try {
        const {window,contract,account,contractAddress} = await connectContract();
        //Gas Estimate
        const gasEstimate = await contract.methods.purchaseTicket(
                eventId,
                eventTicketQuantity
            ).estimateGas({ from: account, value: window.utils.toWei(totalPrice.toString(), 'wei')});
        // // Estimate gas price
        const gasPrice = await window.eth.getGasPrice();
        const transactionData = contract.methods.purchaseTicket(
            eventId,
            eventTicketQuantity
        ).encodeABI();

        const transactionObject = {
            from: account,
            to: contractAddress,
            gas: gasEstimate,
            gasEstimate: gasPrice,
            data: transactionData,
            value:window.utils.toWei(totalPrice.toString(), 'wei') 
        };
        
        // Send the transaction
        const result = await window.eth.sendTransaction(transactionObject);
            alert(`${eventTicketQuantity} Tickets For EventID : ${eventId} Purchased Sucessfully ..! 
Transaction Hash : ${result.transactionHash}`)
        } catch (error) {
