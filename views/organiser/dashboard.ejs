	 const SaleStatusFormatter = (id) =>{
		if (parseInt(id)==0){
			return "NotStarted"
		}else if(parseInt(id)==1){
			return "Started" 
		}else if(parseInt(id)==2){
			return "Cancelled"
		}else {
			return "Unkown"
		}
	 }


	 const GetAllEventIdList = async () => {
		try {
			const response = await fetch('/listAllEventId', {
				method: 'GET'
			});
			const data = await response.json();
			return data["data"];
		} catch (err) {
			console.log(`Error: ${err}`);
			throw err; 
		}
	};

	const eventDetails=async(eventId)=>{
		try {
			const response = await fetch('/eventDetails', {
				method: 'POST',
				headers:{'Content-Type': 'application/json'},
				body:JSON.stringify({
					eventId:eventId
				})
			});
			const data = await response.json();
			return data["data"];
		} catch (err) {
			console.log(`Error: ${err}`);
			throw err; 
		}
	}

